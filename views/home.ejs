<!--
This is our 'home' view.
-->
<!doctype html>
<html lang="en">
<head>
    <%- include( 'partials/head' ); %>

    <style>
        /*.container {
            width: 500px;
            margin: 0 auto;
        }*/
        .progress_outer {
            border: 1px solid #000;
        }
        .progress_bar {
            width: 0%;
            background: linear-gradient(to right, #ccff66 , #248f24);
            opacity: 0.8;
            /*background: #228B22;*/
            height: 20px;
            text-align: center;
            /*margin:0 auto;*/
        }

    </style>
</head>

<body>
<%- include( 'partials/nav' ); %>

<div class="main" style="background-image: url('images/default.jpg')">

    <!--    Change the image source '/images/default.jpg' with your favourite image.     -->

    <div class="cover black" data-color="black"></div>

    <!--   You can change the black color for the filter with those colors: blue, green, red, orange       -->

    <div class='container'>
        <h1 class="logo cursive">
            Speech To Text
        </h1>

        <div class="content">
            <div class="row" >
                <div class="col-md-4 col-md-offset-4 col-sm6-6 col-sm-offset-3 ">
                    <br />
                    <form class="form-inline" id='_type_form' enctype="multipart/form-data" >
                        <label>File Type: &nbsp; </label>
                        <label>Video&nbsp;</label>
                        <input type="radio" name="type" id="_video" value="video" />
                        <label>Audio</label>
                        <input type="radio" name="type" id="_audio" value="audio" checked />
                    </form>
                    <br />
                    <form class="form-inline" id='_language_form' enctype="multipart/form-data" >
                        <label>File Language: &nbsp; </label>
                        <label>English&nbsp;</label>
                        <input type="radio" name="language" id="_english" value="english" checked />
                        <label>French</label>
                        <input type="radio" name="language" id="_french" value="french" />
                    </form>
                    <br />
                    <form class="form-inline" method='POST' id='_file_form' enctype="multipart/form-data" action="/upload">
                        <p nowrap>
                            <label>Select File: </label>
                            <input type='file' id='_file' name='file'>
                        </p>
                        <input type='submit' id='_submit' value='Upload!'>
                    </form>
                    <br/>

                    <div class='progress_outer'>
                        <div id='_progress_bar' class='progress_bar'></div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <script type="text/javascript" src="/js/home.js"></script>

    <%- include( 'partials/footer' ); %>

</div>
</body>
<script src="/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="/js/bootstrap.min.js" type="text/javascript"></script>

</html>
